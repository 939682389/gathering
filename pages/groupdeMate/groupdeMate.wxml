<view class="cu-bar bg-white search " style="top:{{CustomBar}}px">
	<view class="search-form radius">
		<text class="cuIcon-search xl" ></text>
		<input type="text" placeholder="搜索" confirm-type="search" bindinput="searchIcon"></input>
	</view>
</view>
<view class="items text-center">
	<view class="padding-xs bg-orange">排序</view>
	<view class="padding-xs bg-{{tagindex==1?'grey':'gray'}}" bindtap="choose" data-id="1">参与人数</view>
	<view class="padding-xs bg-{{tagindex==2?'grey':'gray'}}" bindtap="choose" data-id="2">最新发布</view>
</view>
<view class="padding flex text-left">
	<view class="cu-avatar lg round margin-left" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big25002.jpg);"></view>
	<view class="padding">名称：xx</view>
	<view class="text-blue padding" bindtap="handleShow" data-target="bottomModal">移除</view>
</view>
<popup-bottom myVisible="{{visible}}" bindmyOnCancel="handleCancel">
	<view bindtap="bind" class="text-sm lg padding">移除该成员后，小组讲不能查看此成员</view>
	<view bindtap="bind" class="text-red text-xl">移除该成员</view>
	<view class="divLine"></view>
	<view bindtap="handleCancel" class="text-xl">取消</view>
</popup-bottom>