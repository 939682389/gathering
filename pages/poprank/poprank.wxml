<!--pages/poprank/poprank.wxml-->
<view wx:for="{{hotgroup}}" class="flex" style="height:200rpx;">
	<view class="indexs padding">
		<view class="index padding text-grey">{{index}}</view>
	</view>
  <view class="flex">
    <image src="{{imgurl}}{{item.image}}" class="img"></image>
    <view class="desc">
      <view class="padding-xs">{{item.name}}</view>
      <view class="padding-xs">{{item.name}}</view>
      <view class="padding-xs">{{item.number}}人已报名/共{{item.name}}个名额</view>
    </view>
  </view>
</view>